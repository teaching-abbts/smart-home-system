{
  "name": "Smart Home System DEV",
  "image": "mcr.microsoft.com/devcontainers/base:dev-ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers-extra/features/kotlin-sdkman:2": {
      "jdkDistro": "tem",
      "jdkVersion": "21",
      "version": "2.1.21"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installNpmGlobally": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "vscode-icons-team.vscode-icons",
        "fwcd.kotlin",
        "vscjava.vscode-gradle",
        "redhat.java",
        "mhutchie.git-graph",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
